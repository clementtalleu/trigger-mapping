<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="trigger_mapping.command.schema_diff" class="Talleu\TriggerMapping\Command\TriggersSchemaDiffCommand">
            <argument type="service" id="trigger_mapping.metadata.triggers_mapping"/>
            <argument type="service" id="trigger_mapping.database.triggers_db_extractor"/>
            <argument type="service" id="trigger_mapping.factory.trigger_creator"/>
            <argument type="service" id="maker.generator" />
            <argument type="service" id="trigger_mapping.storage_resolver"/>
            <argument type="service" id="doctrine.migrations.configuration"/>
            <argument>%trigger_mapping.migrations%</argument>
            <tag name="console.command" />
        </service>

        <service id="trigger_mapping.command.mapping_update" class="Talleu\TriggerMapping\Command\TriggersMappingUpdateCommand">
            <argument type="service" id="trigger_mapping.metadata.triggers_mapping"/>
            <argument type="service" id="trigger_mapping.database.triggers_db_extractor"/>
            <argument type="service" id="trigger_mapping.storage_resolver"/>
            <argument type="service" id="trigger_mapping.factory.mapping_creator"/>
            <argument type="service" id="trigger_mapping.factory.trigger_creator"/>
            <argument type="service" id="maker.generator" />
            <argument type="service" id="trigger_mapping.utils.entity_finder" />
            <tag name="console.command" />
        </service>

        <service id="trigger_mapping.factory.trigger_creator" class="Talleu\TriggerMapping\Factory\TriggerCreator">
            <argument type="service" id="maker.generator" />
            <argument type="service" id="trigger_mapping.storage_resolver"/>
            <argument type="service" id="trigger_mapping.platform_resolver"/>
            <argument type="service" id="doctrine.migrations.dependency_factory"/>
            <argument>%trigger_mapping.migrations%</argument>
        </service>

        <service id="trigger_mapping.factory.mapping_creator" class="Talleu\TriggerMapping\Factory\MappingCreator">
            <argument type="service" id="maker.file_manager" />
        </service>

        <service id="trigger_mapping.maker.command.trigger" class="Talleu\TriggerMapping\Symfony\Maker\MakeTrigger">
            <argument type="service" id="maker.doctrine_helper" />
            <argument type="service" id="trigger_mapping.platform_resolver"/>
            <argument type="service" id="trigger_mapping.factory.trigger_creator"/>
            <argument type="service" id="trigger_mapping.factory.mapping_creator"/>
            <argument type="service" id="trigger_mapping.storage_resolver"/>
            <argument>%trigger_mapping.migrations%</argument>
            <tag name="maker.command" />
        </service>
    </services>
</container>
