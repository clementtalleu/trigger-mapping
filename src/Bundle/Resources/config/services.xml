<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="trigger_mapping.command.validate" class="Talleu\TriggerMapping\Command\TriggersSchemaValidateCommand">
            <argument type="service" id="trigger_mapping.metadata.triggers_mapping"/>
            <argument type="service" id="trigger_mapping.database.triggers_db_extractor"/>
            <argument type="service" id="trigger_mapping.utils.entity_finder"/>
            <tag name="console.command" />
        </service>

        <service id="trigger_mapping.metadata.triggers_mapping" class="Talleu\TriggerMapping\Metadata\TriggersMapping">
            <argument type="service" id="doctrine.migrations.dependency_factory"/>
            <argument type="service" id="trigger_mapping.factory.trigger_definition_factory"/>
            <argument type="service" id="trigger_mapping.factory.trigger_definition_factory"/>
        </service>

        <service id="trigger_mapping.database.triggers_db_extractor" class="Talleu\TriggerMapping\DatabaseSchema\TriggersDbExtractor">
            <argument type="service" id="doctrine.migrations.dependency_factory"/>
            <argument type="service" id="trigger_mapping.platform_resolver"/>
            <argument>%trigger_mapping.exclude%</argument>
        </service>

        <service id="trigger_mapping.factory.trigger_definition_factory"
                 class="Talleu\TriggerMapping\Factory\TriggerDefinitionFactory"
                 autowire="true" autoconfigure="true">
            <argument type="service" id="trigger_mapping.storage_resolver"/>
        </service>

        <service id="trigger_mapping.platform_resolver" class="Talleu\TriggerMapping\Platform\DatabasePlatformResolver">
            <argument type="service" id="doctrine.dbal.default_connection" />
        </service>

        <service id="trigger_mapping.storage_resolver" class="Talleu\TriggerMapping\Storage\StorageResolver">
            <argument>%trigger_mapping.storage.type%</argument>
            <argument>%trigger_mapping.storage.directory%</argument>
            <argument>%trigger_mapping.storage.namespace%</argument>
        </service>

        <service id="trigger_mapping.command.schema_update" class="Talleu\TriggerMapping\Command\TriggersSchemaUpdateCommand">
            <argument type="service" id="trigger_mapping.metadata.triggers_mapping"/>
            <argument type="service" id="trigger_mapping.storage_resolver"/>
            <argument type="service" id="trigger_mapping.platform_resolver"/>
            <argument type="service" id="doctrine.dbal.default_connection" />
            <tag name="console.command" />
        </service>

        <service id="trigger_mapping.utils.entity_finder" class="Talleu\TriggerMapping\Utils\EntityFinder">
            <argument type="service" id="maker.doctrine_helper" />
        </service>
    </services>
</container>
